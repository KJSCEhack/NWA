<resources>

    <!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
		<item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
    </style>

	<style name = "NoActionBar" parent = "Theme.AppCompat">
		<item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
		<item name = "android:colorPrimary">@color/yellow_600</item>
		<item name = "android:colorPrimaryDark">@color/yellow_700</item>
		<item name = "android:colorAccent">@color/orange_A200</item>
	</style>
	
</resources>
